<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_d"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7.5"
        android:background="#333333"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/view_a"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:src="@drawable/cellphoneicon_login_profile_normal" />

        <ImageView
            android:id="@+id/view_b"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:src="@drawable/qq_allshare_normal"/>
        <ImageView
            android:id="@+id/view_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="120dp"
            android:src="@drawable/sinaicon_login_profile_normal"/>
        <ImageView
            android:id="@+id/view_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="150dp"
            android:src="@drawable/drawer_item_arrow_pressed"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8.5"
        android:background="#333333"
        android:orientation="horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="登陆推荐更精准"
            android:textColor="#CFCFCF"
            android:id="@+id/textView" />
    </LinearLayout>

    <LinearLayout
    android:layout_weight="9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/view_e"
                android:layout_weight="1.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/love_jokebar_textpage_normal"/>
            <TextView
                android:id="@+id/tv_e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  收藏"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/view_f"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nighticon_leftdrawer_normal_night"/>
            <TextView
                android:id="@+id/tv_f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  夜间"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.5"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/view_g"
                android:layout_weight="1.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/settingicon_leftdrawer_normal_night"/>
            <TextView
                android:id="@+id/tv_g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统设置"/>
        </LinearLayout>
</LinearLayout>
      <TextView
          android:id="@+id/base_tv_a"
          android:layout_width="match_parent"
          android:layout_height="10dp"
          android:background="#EAEAEA"/>

    <LinearLayout
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
       <ListView
           android:id="@+id/listview"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"></ListView>
    </LinearLayout>

</LinearLayout>
